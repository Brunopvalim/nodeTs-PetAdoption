{{>partials/header}}

{{#banner}}
<section class="banner" style="background-image: url('images/{{background}}')">{{title}}</section>
<h2>{{title}} available for adoption</h2>
{{/banner}}

<div class="container list">
    {{#list}}
    <div class="item">
        <img src="images/{{image}}" class="item--image" />
        <div class="item--name">{{name}}</div>
        <div class="item--color">Color: {{color}}</div>
        <div class="item--genre">Genre: {{sex}}</div>
    </div>
    {{/list}}
        
</div>

{{^list}}
    <div class="container no-list">
        <h2> There is no match for your search term</h2>
    </div>
{{/list}}

{{>partials/footer}}